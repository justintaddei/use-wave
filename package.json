{
  "name": "use-wave",
  "version": "1.0.0-beta.6",
  "description": "The material-ripple hook for React that actually works",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "unpkg": "dist/iife/index.js",
  "types": "dist/types/",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "rollup --config",
    "dev": "npm run build -- --watch",
    "format": "prettier --write \"src/**/*.(t|j)s\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "release": "npm run lint && npm run format && npm test && standard-version"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justintaddei/use-wave.git"
  },
  "keywords": [
    "react",
    "react-hooks",
    "hook",
    "wave",
    "react-use-ripple",
    "reactjs-ripple",
    "use wave",
    "use ripple",
    "usewave",
    "useripple",
    "ripple",
    "material",
    "material design",
    "material ripple",
    "animation"
  ],
  "author": "Justin Taddei <justin@justintaddei.com> (https://justintaddei.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/justintaddei/use-wave/issues"
  },
  "homepage": "https://github.com/justintaddei/use-wave#readme",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^17.4.4",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/jest": "^27.5.0",
    "@types/react": "^17.0.0",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rollup": "^2.36.1",
    "rollup-plugin-typescript2": "^0.34.1",
    "rollup-plugin-uglify": "^6.0.4",
    "standard-version": "^9.1.0",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": ">=16.8"
  }
}
